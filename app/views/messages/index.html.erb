<p id="notice"><%= notice %></p>

<h1>Messages</h1>

<table>
  <thead>
    <tr>
      <th>Content</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @messages.each do |message| %>
      <tr>
        <td><%= @user.email %>:</td>
        <td><%= message.content %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= render 'form', message: @message %>